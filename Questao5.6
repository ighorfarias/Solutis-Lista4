public class Pombo extends AnimalVoadorAB {

    public Pombo(String nome, String tipoAnimal, int idade, String habitat, double altura, double peso, int quantidadeAssas, double envergaduraAssa) {
        super(nome, tipoAnimal, idade, habitat, altura, peso, quantidadeAssas, envergaduraAssa);
    }

    @Override
    public void voar() {
        caminhoPercorrido += 20;
        System.out.println("O pombo voou. Caminho percorrido: " + caminhoPercorrido);
    }

    @Override
    public void comer() {
        quantidadeComida += 2;
        System.out.println("O pombo comeu. Quantidade de comida ingerida: " + quantidadeComida);
    }

    @Override
    public void dormir() {
        horasDormidas += 5;
        System.out.println("O pombo dormiu. Horas dormidas: " + horasDormidas);
    }
}
